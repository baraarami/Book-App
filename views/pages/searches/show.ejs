<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book-App</title>
    <link rel="stylesheet" href="../style/base.css">
    <link rel="stylesheet" href="../styles/layout.css">
    <link rel="stylesheet" href="../styles/modules.css">
    <link rel="stylesheet" href="../styles/reset.css">

</head>

<%-include ('../layout/header') %>
<body>
    <main>
     <h1>Book List </h1>

     <section>
       <% bookArr.forEach(book=>{ %>
       <form action="/addbook" method="POST" class="book">
        <img src="<%= book.url %>" alt="">
      <input type="hidden" name="url" value="<%= book.url%>">
      
      <h2>Title : <%= book.title %></h2>
      <input type="hidden" name="title" value="<%= book.title %>">
      
      <h3>Auther : <%= book.auther %></h3>
      <input type="hidden" name="auther" value="<%= book.auther %>">
      
      <p><%= book.descreption %></p>
      <input type="hidden" name="descreption" value="<%= book.descreption %>">
       
      <button>choose this book  </button>
    
    </form>
        <% }) %>
     </section>
    </main>
</body>
</html>